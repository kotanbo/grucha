{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "app",
    "paths": {
      "~/*": [
        "*"
      ],
      "@/*": [
        "*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/axios",
      "vuetify"
    ],
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ]
}
